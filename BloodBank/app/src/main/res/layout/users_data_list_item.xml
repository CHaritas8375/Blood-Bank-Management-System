<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_root"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:paddingBottom="1dp">

        <ImageView
            android:id="@+id/img_blood_type"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/box_view"
            android:padding="10dp"
            android:src="@drawable/o_negative" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="1dp"
            android:background="@drawable/box_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_full_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Full_Name"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_contact"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="9874563214"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_view_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="example@bloodbank.com"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/tv_call"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle_image"
        android:clickable="true"
        android:contextClickable="true"
        android:elevation="20dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_call_24" />
        
</RelativeLayout>